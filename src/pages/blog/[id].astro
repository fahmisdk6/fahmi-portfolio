---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} â€” Fahmi Sidik`} description={post.data.description}>
  <article class="py-8 max-w-3xl">
    <a href="/blog" class="text-sm text-text-muted hover:text-primary transition-colors">
      &larr; Back to Blog
    </a>
    <div class="mt-6">
      <div class="flex items-center gap-3 text-sm text-text-muted">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </time>
        {post.data.tags.length > 0 && (
          <>
            <span>&middot;</span>
            <div class="flex gap-2">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-0.5 rounded bg-white/5 text-xs">{tag}</span>
              ))}
            </div>
          </>
        )}
      </div>
      <h1 class="text-4xl font-bold mt-4">{post.data.title}</h1>
      <p class="text-text-muted text-lg mt-3">{post.data.description}</p>
    </div>
    <div class="prose prose-invert prose-zinc mt-12 max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
