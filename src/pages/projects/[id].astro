---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const categoryLabels: Record<string, string> = {
  professional: "Professional",
  personal: "Personal",
  "open-source": "Open Source",
};
---

<BaseLayout title={`${project.data.title} â€” Fahmi Sidik`} description={project.data.description}>
  <article class="py-8 max-w-3xl">
    <a href="/projects" class="text-sm text-text-muted hover:text-primary transition-colors">
      &larr; Back to Projects
    </a>
    <div class="mt-6">
      <span class="text-xs text-primary font-mono uppercase tracking-wider">
        {categoryLabels[project.data.category]}
      </span>
      <h1 class="text-4xl font-bold mt-2">{project.data.title}</h1>
      <p class="text-text-muted text-lg mt-3">{project.data.description}</p>
      <div class="flex flex-wrap gap-2 mt-4">
        {project.data.tech.map((t) => (
          <span class="text-xs px-2 py-1 rounded bg-white/5 text-text-muted">{t}</span>
        ))}
      </div>
      <div class="flex gap-4 mt-6">
        {project.data.url && (
          <a
            href={project.data.url}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-primary hover:bg-primary-dark rounded-lg text-white text-sm font-medium transition-colors"
          >
            Visit Live &nearr;
          </a>
        )}
        {project.data.repo && (
          <a
            href={project.data.repo}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 border border-white/10 hover:border-white/20 rounded-lg text-sm font-medium transition-colors"
          >
            Source Code &nearr;
          </a>
        )}
      </div>
    </div>
    <div class="prose prose-invert prose-zinc mt-12 max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
